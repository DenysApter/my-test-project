<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="1" author="Denys">
        <createTable tableName="lesson">
            <column name="lesson_id" autoIncrement="true" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="lesson_id"/>
            </column>
            <column name="lesson_name" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Denys" id="2">
        <loadData tableName="lesson" file="liquibase/setup-data/lesson/init.csv">
            <column name="lesson_id" type="NUMERIC"/>
            <column name="lesson_name" type="STRING"/>
        </loadData>
    </changeSet>

</databaseChangeLog>